# =====================================================================
# Dr. PLATI - Windows XAMPP Configuration Template  
# =====================================================================
# Copy this file to .env and customize for your Windows setup

# Flask Application Settings
# =====================================================================
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=dr-plati-super-secret-key-change-this-in-production
DEBUG=True

# Database Configuration - XAMPP MySQL
# =====================================================================
# Standard XAMPP MySQL settings (no password by default)
DATABASE_URL=mysql+pymysql://root:@localhost:3306/drplati

# Individual DB parameters
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=drplati
DB_CHARSET=utf8mb4

# Email Configuration (Optional - για password reset)
# =====================================================================
# Gmail example (requires App Password)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Clinic Information
# =====================================================================
CLINIC_NAME=Dr. PLATI
CLINIC_ADDRESS=Η διεύθυνση του ιατρείου σας
CLINIC_PHONE=+30 210 1234567
CLINIC_EMAIL=info@drplati.gr
CLINIC_WEBSITE=https://www.drplati.gr

# Security Settings
# =====================================================================
WTF_CSRF_ENABLED=true
SESSION_COOKIE_SECURE=false
SESSION_TIMEOUT_HOURS=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15

# File Upload Settings 
# =====================================================================
MAX_CONTENT_LENGTH=52428800
UPLOAD_FOLDER=static/uploads
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,gif,doc,docx,xls,xlsx

# Feature Configuration
# =====================================================================
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_AUDIT_LOG=true
ENABLE_AUTO_BACKUP=false
ENABLE_DEBUG_TOOLBAR=true

# Backup Settings (Windows Paths)
# =====================================================================
BACKUP_DIR=C:\\drplati\\backups
BACKUP_RETENTION_DAYS=30
MYSQLDUMP_PATH=C:\\xampp\\mysql\\bin\\mysqldump.exe

# Logging Configuration
# =====================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_TO_CONSOLE=true
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Timezone & Localization
# =====================================================================
TIMEZONE=Europe/Athens
DEFAULT_LOCALE=el_GR
DEFAULT_LANGUAGE=el

# Medical Settings
# =====================================================================
DEFAULT_VAT_RATE=24
INVOICE_PREFIX=DR
CURRENCY=EUR

# Performance Settings (Windows Optimized)
# =====================================================================
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Development Settings
# =====================================================================
TESTING=false
MAIL_SUPPRESS_SEND=false
MAIL_DEBUG=false

# =====================================================================
# WINDOWS XAMPP QUICK SETUP CHECKLIST:
# =====================================================================
# 1. Install XAMPP and start Apache + MySQL
# 2. Create database 'drplati' in phpMyAdmin
# 3. Set CLINIC_* information above
# 4. Optional: Configure email settings for password reset
# 5. Keep DEBUG=True for development, set to False for production
# 6. Default shared password is 'kp020716' (configurable in code)
# =====================================================================

# SECURITY NOTES:
# - Change SECRET_KEY before production use
# - Set up email for password reset functionality  
# - Use strong admin passwords
# - Regular database backups recommended
# =====================================================================
